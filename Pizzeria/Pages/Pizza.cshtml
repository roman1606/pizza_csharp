@page
@model Pizzeria.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of Piazzas!</h1>
        <h4>Choose one, or try our Pizza Builder! Then Order and Done!</h4>
        <h4>No need to give any of your details!</h4>
        <h4>We already know everything!</h4>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8" align-items-center>
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create Your Own Pizza</h3>
                            <p style="text-align:left;">Make your own Pizza with our PizzaMaker!</p>
                            <a class="btn btn-primary" style="float: left;" asp-page="Forms/CustomPizza">Try Now!</a>
                        </div> 
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "images/Pizzas/" + pizza.ImageTitle + ".png";
                <div class="col-4 mb-5">
                    <a class="pizza-img" asp-area="" 
                        asp-page="Checkout/Checkout" 
                        asp-route-ImageTitle="@pizza.ImageTitle" 
                        asp-route-PizzaPrice="@pizza.FinalPrice">
                            <img src="@imagePath" class="w-100" asp-asp-append-version="true" alt="@imagePath" />
                    </a>
                    <br />
                </div>
            }
        </div>
    </div>
</div>